// Input validation
function validateAndAssign(e, assignFunc) {
  var value = e.target.value.trim();
  var num = parseInt(value, 10);

  if (!value || isNaN(num) || num <= 0) {
    e.target.style.borderColor = "#ef4444";
    assignFunc(0);
  } else {
    e.target.style.borderColor = "#10b981";
    assignFunc(num);
  }
}

